{
  "manifest_version": 2,
  "name": "Copy Leetcode Problem",
  "version": "1.0",

  "description": "Easily copy the current LeetCode problem description to your clipboard.",
  "icons": {
    "64": "icons/copy.png"
  },

  "permissions": ["activeTab", "tabs", "clipboardWrite"],

  "browser_action": {
    "default_icon": "icons/copy.png",
    "default_title": "Copy problem!"
  },

  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://leetcode.com/problems/*/description/*"],
      "js": ["content.js"]
    }
  ]
}
